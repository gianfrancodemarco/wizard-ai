  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Tests",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false
    },    
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "python": "${command:python.interpreterPath}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Debug FastAPI",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "127.0.0.1",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/mai_assistant/mai_assistant",
          "remoteRoot": "/app/mai_assistant"
        }
      ],
      "justMyCode": false,
      "redirectOutput": false
    },
    {
      "name": "Debug Telegram Bot",
      "type": "python",
      "request": "attach",
      "port": 5679,
      "host": "127.0.0.1",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/mai_assistant_telegram_bot",
      "remoteRoot": "/app/mai_assistant_telegram_bot"
        },
        {
          "localRoot": "${workspaceFolder}/mai_assistant_telegram_bot/main.py",
          "remoteRoot": "/app/main.py"
        }
      ],
        "justMyCode": false
    }
  ]
}
