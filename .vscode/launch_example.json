  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI",
      "type": "python",
      "request": "launch",
      "python": "${command:python.interpreterPath}",
      "module": "uvicorn",
      "args": [
        "mai_assistant.app.main:app",
        "--host",
        "0.0.0.0",
        "--reload",
        "--reload-dir",
        "mai_assistant"
      ]
    },  
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
